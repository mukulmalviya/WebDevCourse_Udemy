<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center"> New Campgrounds </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="form-group mb-3">
                <label class='form-label' for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Enter Campground Name"
                    name="campground[title]">
            </div>
            <div class="form-group mb-3">
                <label class='form-label' for="location">Location</label>
                <input type="text" class="form-control" id="location" placeholder="Enter it's location"
                    name="campground[location]">
            </div>
            <div class="form-group mb-3">
                <label class='form-label' for="image">Image URL</label>
                <input type="text" class="form-control" id="image" placeholder="Enter image url"
                    name="campground[image]">
            </div>
            <div class="mb-3">
                <label class='form-label' for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]">
                </div>
            </div>


            <div class="form-group mb-3">
                <label class='form-label' for="description">Description</label>
                <textarea type="text" class="form-control" id="description" placeholder="What makes this place special?"
                    name="campground[description]"></textarea>
            </div>
            <div class="md-3">
                <button type="submit" class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>