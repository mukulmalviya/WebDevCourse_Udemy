<% layout("layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center"> Edit Campground </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group mb-3">
                <label class='form-label' for="title">Title</label>
                <input type="text" class="form-control" id="title" value="<%=campground.title %>"
                    name="campground[title]">
            </div>
            <div class="form-group mb-3">
                <label class='form-label' for="location">Location</label>
                <input type="text" class="form-control" id="location" value="<%= campground.location%>"
                    name="campground[location]">
            </div>
            <div class="form-group mb-3">
                <label class='form-label' for="image">Image URL</label>
                <input type="text" class="form-control" id="image" value="<%= campground.image%>"
                    name="campground[image]">
            </div>
            <div class="mb-3">
                <label class='form-label' for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" value="<%= campground.price%>" aria-label="price"
                        aria-describedby="price-label" name="campground[price]">
                </div>
            </div>


            <div class="form-group mb-3">
                <label class='form-label' for="description">Description</label>
                <textarea type="text" class="form-control" id="description" placeholder="What makes this place special?"
                    name="campground[description]"><%= campground.description%></textarea>
            </div>
            <div class="md-3">
                <button type="submit" class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>
    </div>
</div>